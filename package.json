{
  "name": "portfolio-mern-stack",
  "version": "1.0.0",
  "description": "MERN Stack Portfolio Website with Interactive Mind Map",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client"
  },
  "keywords": [
    "portfolio",
    "mern",
    "react",
    "mongodb",
    "express"
  ],
  "author": "Sowmiya M V",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

